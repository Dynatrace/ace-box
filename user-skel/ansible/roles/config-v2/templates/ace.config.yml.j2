---
# Host
host_group: "{{ host_group | default('ace-box') }}"
host_ip: "{{ host_ip | default('127.0.0.1') }}"
ingress_class: "{{ ingress_class | default('public') }}"
ingress_domain: "{{ ingress_domain | default(None) }}"
ingress_protocol: "{{ ingress_protocol | default(None) }}"
# Extra vars
extra_vars: {{ extra_vars | default({}) }}
# Git
git_flavor: "{{ git_flavor | default('GITEA') }}"
# Dynatrace
dynatrace_tenant_url: "{{ dynatrace_tenant_url | default(None) }}"
dynatrace_paas_token: "{{ dynatrace_paas_token | default(None) }}"
dynatrace_api_token: "{{ dynatrace_api_token | default(None) }}"
# Cloud Automation
cloud_automation_flavor: "{{ cloud_automation_flavor | default('KEPTN') }}"
cloud_automation_tenant_url: "{{ ca_tenant_url | default(None) }}"
cloud_automation_api_token: "{{ ca_api_token | default(None) }}"
# Features
