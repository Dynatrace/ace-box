apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
# FIXME remove hardcoded namespaces from resources
namespace: "{{ hipstershop_namespace }}"
resources:
- clone/dynatrace/kubernetes_autogenerated/adservice.yaml
- clone/dynatrace/kubernetes_autogenerated/cartservice.yaml
- clone/dynatrace/kubernetes_autogenerated/checkoutservice.yaml
- clone/dynatrace/kubernetes_autogenerated/currencyservice.yaml
- clone/dynatrace/kubernetes_autogenerated/emailservice.yaml
- clone/dynatrace/kubernetes_autogenerated/frontend.yaml
- clone/dynatrace/kubernetes_autogenerated/loadgenerator.yaml
- clone/dynatrace/kubernetes_autogenerated/paymentservice.yaml
- clone/dynatrace/kubernetes_autogenerated/productcatalogservice.yaml
- clone/dynatrace/kubernetes_autogenerated/randomizer.yaml
- clone/dynatrace/kubernetes_autogenerated/recommendationservice.yaml
- clone/dynatrace/kubernetes_autogenerated/redis.yaml
- clone/dynatrace/kubernetes_autogenerated/shippingservice.yaml
- resources/ingress.yaml
- resources/redis-pvc.yaml
patchesStrategicMerge:
- patches/checkoutservice.yaml
- patches/currencyservice.yaml
- patches/paymentservice.yaml
- patches/frontend-external.yaml
- patches/redis.yaml
- patches/loadgenerator.yaml
- patches/hipstershop-ingress.yaml # this file is created at run-time to override ingress details

images:
- name: ghcr.io/mreider/adservice
  newTag: "{{ hipstershop_image_tag }}"

- name: ghcr.io/mreider/cartservice
  newTag: "{{ hipstershop_image_tag }}"

- name: ghcr.io/mreider/checkoutservice
  newTag: "{{ hipstershop_image_tag }}"      

- name: ghcr.io/mreider/currencyservice
  newTag: "{{ hipstershop_image_tag }}" 

