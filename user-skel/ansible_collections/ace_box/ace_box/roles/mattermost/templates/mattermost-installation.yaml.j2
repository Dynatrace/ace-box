---
apiVersion: installation.mattermost.com/v1beta1
kind: Mattermost
metadata:
  name: mattermost
spec:
  version: 6.0.1
  size: 100users # The size of your installation. This can be '100users', '1000users, '5000users', '10000users', or '25000users'.
  ingress:
    enabled: true
    host: mattermost.{{ ingress_domain }}
    annotations:
      kubernetes.io/ingress.class: public
  mattermostEnv:
    - name: MM_SERVICESETTINGS_ENABLELOCALMODE
      value: "true"
    - name: MM_SERVICESETTINGS_ENABLEUSERACCESSTOKENS
      value: "true"
