      group: apps
      version: v1
      kind: Deployment
      name: accountservice
    path: labels/kubernetes-labels-patch.yml
  - target:
      group: apps
      version: v1
      kind: Deployment
      name: broker-service
    path: labels/kubernetes-labels-patch.yml
  - target:
      group: apps
      version: v1
      kind: Deployment
      name: contentcreator
    path: labels/kubernetes-labels-patch.yml
  - target:
      group: apps
      version: v1
      kind: Deployment
      name: credit-card-order-service
    path: labels/kubernetes-labels-patch.yml
  - target:
      group: apps
      version: v1
      kind: Deployment
      name: db
    path: labels/kubernetes-labels-patch.yml
  - target:
      group: apps
      version: v1
      kind: Deployment
      name: engine
    path: labels/kubernetes-labels-patch.yml
  - target:
      group: apps
      version: v1
      kind: Deployment
      name: loadgen
    path: labels/kubernetes-labels-patch.yml
  - target:
      group: apps
      version: v1
      kind: Deployment
      name: loginservice
    path: labels/kubernetes-labels-patch.yml
  - target:
      group: apps
      version: v1
      kind: Deployment
      name: manager
    path: labels/kubernetes-labels-patch.yml
  - target:
      group: apps
      version: v1
      kind: Deployment
      name: pricing-service
    path: labels/kubernetes-labels-patch.yml
  - target:
      group: apps
      version: v1
      kind: Deployment
      name: third-party-service
    path: labels/kubernetes-labels-patch.yml

